{% extends 'base.html.twig' %}

{% block title %}{{ 'common.data.title'|trans }}{% endblock %}

{% block body %}

    <div class="row">

        <div class="col-3">
            <p><strong>{{ 'common.field.parent'|trans }}</strong></p>
            <p>
                {% if data.parent %}
                    <a title="{{ data.parent }}" href="{{ path('app_data_show', {'id': data.parent.id}) }}">{{ data.parent.id }} - {{ data.parent|u.truncate(10, '...', false) }}</a>
                {% else %}
                    <a title="{{ 'common.data.root'|trans }}" href="{{ path('app_data_index') }}">{{ 'common.data.root'|trans }}</a>
                {% endif %}
            </p>
                <div>
                    <p><strong>{{ 'common.data.children'|trans }}</strong></p>
                    <ul class="list-unstyled">
                        {% for child in children %}
                            <li>
                                <a title="{{ child }}" href="{{ path('app_data_show', {'id': child.id}) }}">{{ child.id }} - {{ child|u.truncate(10, '...', false) }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
        </div>

        <div class="col-9">
            <h1>{{ data.id }} - {{ data.title }}</h1>
            <div>
                {% for tag in data.tags %}<a href="{{ path('app_tag_show', {'id': tag.id}) }}"><span class="badge bg-secondary">{{ tag }}</span></a> {% endfor %}
            </div>

            <div>{{ data.body|default('')|markdown_to_html }}</div>

            <p>
                <a href="{{ path('app_home', {'parent': data.id}) }}">{{ 'data.add'|trans }}</a> | <a href="{{ path('app_data_edit', {'id': data.id}) }}">{{ 'data.edit'|trans }}</a>
            </p>

        </div>
    </div>





{% endblock %}
