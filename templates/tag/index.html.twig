{% extends 'base.html.twig' %}

{% block title %}{{ 'common.tags.index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'common.tags.index'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'common.field.name'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('app_tag_show', {'id': tag.id}) }}">{{ tag.name }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'common.no.records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
