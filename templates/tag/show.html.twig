{% extends 'base.html.twig' %}

{% block title %}{{ 'common.tag.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ tag.name }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'common.field.title'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for data in tag.data %}
            <tr>
                <td><a href="{{ path('app_data_show', {'id': data.id}) }}">{{ data.title }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'common.no.records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
